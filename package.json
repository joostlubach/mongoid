{
  "name": "mongoid",
  "version": "1.0.0",
  "description": "Simple MongoDB ORM",
  "author": "Joost Lubach",
  "license": "MIT",
  "scripts": {
    "build": "pnpm build:tsc && pnpm build:copy",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:copy": "copyfiles -u 1 src/**/*.yml src/**/*.css dist",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },

  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./backend": {
      "require": {
        "types": "./dist/cjs/backend/index.d.ts",
        "default": "./dist/cjs/backend/index.js"
      },
      "import": {
        "types": "./dist/esm/backend/index.d.ts",
        "default": "./dist/esm/backend/index.js"
      }
    },
    "./types": {
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/types/index.js"
      },
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/types/index.js"
      }
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "inflected": "^2.0.4",
    "luxon": "^3.3.0",
    "mongodb": "^6.1.0",
    "query": "github:protobi/query",
    "strip-ansi": "^5.2.0",
    "validator": "workspace:^",
    "winston": "^3.10.0",
    "yest": "workspace:^",
    "ytil": "workspace:^"
  },
  "devDependencies": {
    "@types/inflected": "^1.1.29",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "semaphore": "workspace:^",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}
