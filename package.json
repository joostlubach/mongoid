{
  "name": "mongoid",
  "version": "1.0.0",
  "description": "Simple MongoDB ORM",
  "author": "Joost Lubach",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./backend": {
      "types": "./dist/types/backend/index.d.ts",
      "import": "./dist/esm/backend/index.js",
      "default": "./dist/cjs/backend/index.js"
    },
    "./types": {
      "types": "./dist/types/types/index.d.ts",
      "import": "./dist/esm/types/index.js",
      "default": "./dist/cjs/types/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:tsc",
    "build:tsc": "pnpm build:tsc:esm && pnpm build:tsc:cjs",
    "build:tsc:esm": "tsc -p tsconfig.prod.json --module esnext --outDir dist/esm --declarationDir dist/types",
    "build:tsc:cjs": "tsc -p tsconfig.prod.json --module commonjs --outDir dist/cjs --declaration false --declarationMap false",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "lint": "eslint src --ext ts,tsx",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "inflected": "^2.1.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "mongodb": "^6.5.0",
    "query": "github:protobi/query",
    "strip-ansi": "^6.0.1",
    "validator": "workspace:^",
    "winston": "^3.13.0",
    "yest": "workspace:^",
    "ytil": "workspace:^"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/inflected": "^1.1.29",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/luxon": "^3.4.2",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "semaphore": "workspace:^",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.8",
    "typescript": "5.4.3"
  }
}
