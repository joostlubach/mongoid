{
  "name": "mongoid",
  "version": "1.0.0",
  "description": "Simple MongoDB ORM",
  "author": "Joost Lubach",
  "license": "MIT",
  "scripts": {
    "build": "(pnpm build:prepare && pnpm build:tsc && pnpm build:tsc-alias && pnpm build:copy && pnpm build:rsync); pnpm build:cleanup",
    "build:prepare": "test -x .build && rm -rf .build; mkdir -p .build",
    "build:tsc": "tsc -p tsconfig.prod.json --outDir .build",
    "build:tsc-alias": "tsc-alias -p tsconfig.prod.json --outDir .build",
    "build:copy": "copyfiles -u 1 src/**/*.yml src/**/*.css .build",
    "build:rsync": "rsync -uvaz --delete .build/ dist/",
    "build:cleanup": "rm -rf .build",
    "clean": "rimraf dist",
    "test": "NODE_ENV=test jest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./backend": {
      "types": "./dist/backend/index.d.ts",
      "default": "./dist/backend/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "inflected": "^2.0.4",
    "mongodb": "^6.0.0",
    "strip-ansi": "^5.2.0",
    "validator": "workspace:^",
    "winston": "^3.10.0",
    "ytil": "workspace:^"
  },
  "devDependencies": {
    "@types/inflected": "^1.1.29",
    "copyfiles": "^2.4.1",
    "jest": "^29.3.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.2.2"
  }
}
