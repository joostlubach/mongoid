{
  "name": "mongoid",
  "version": "1.0.0",
  "description": "Simple MongoDB ORM",
  "author": "Joost Lubach",
  "license": "MIT",
  "scripts": {
    "build": "(pnpm build:prepare && pnpm build:tsc && pnpm build:tsc-alias && pnpm build:copy && pnpm build:rsync); pnpm build:cleanup",
    "build:prepare": "test -x .build && rm -rf .build; mkdir -p .build",
    "build:tsc": "tsc -p tsconfig.prod.json --outDir .build/cjs && tsc -p tsconfig.prod.json --module ESNext --outDir .build/esm",
    "build:tsc-alias": "tsc-alias -p tsconfig.prod.json --outDir .build/cjs && tsc-alias -p tsconfig.prod.json --outDir .build/cjs",
    "build:copy": "copyfiles -u 1 src/**/*.yml src/**/*.css .build/cjs && copyfiles -u 1 src/**/*.yml src/**/*.css .build/esm",
    "build:rsync": "rsync -uvaz --delete .build/ dist/",
    "build:cleanup": "rm -rf .build",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "test": "NODE_ENV=test jest"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./backend": {
      "require": {
        "types": "./dist/cjs/backend/index.d.ts",
        "default": "./dist/cjs/backend/index.js"
      },
      "import": {
        "types": "./dist/esm/backend/index.d.ts",
        "default": "./dist/esm/backend/index.js"
      }
    },
    "./types": {
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/types/index.js"
      },
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/types/index.js"
      }
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "inflected": "^2.0.4",
    "luxon": "^3.3.0",
    "mongodb": "^6.1.0",
    "query": "github:protobi/query",
    "strip-ansi": "^5.2.0",
    "validator": "workspace:^",
    "winston": "^3.10.0",
    "yest": "workspace:^",
    "ytil": "workspace:^"
  },
  "devDependencies": {
    "@types/inflected": "^1.1.29",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "semaphore": "workspace:^",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}
