{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "lib":    ["es2017", "dom"],

    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,

    "moduleResolution": "node",
    "baseUrl": "."
  },

  "include": [
    "types/*",
    "src/**/*",
    "index.ts",
    "types.ts"
  ]
}